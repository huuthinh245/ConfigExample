{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".", // Đặt base url là thư mục gốc
    "paths": {
      "~/*": ["src/*"] // Đặt "~" là alias cho thư mục src
    }
  },
  "exclude": [
    "node_modules" // Đừng bắt VSCode nó phải chọc vào
  ] // cái đống trong này.
}
